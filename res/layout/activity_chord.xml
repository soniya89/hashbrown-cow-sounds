<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080909"
    android:orientation="vertical" >
    
    <TextView 
        android:id="@+id/song_title_note"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:textColor="#7DF9FF"
     />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">
    <Button
		style="@style/btnStyleBlackpearl"
        android:id="@+id/save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/save_note"
        android:textColor="#7DF9FF"/>
    <Button
        style="@style/btnStyleBlackpearl"
        android:id="@+id/delete_note_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/delete_note"
        android:textColor="#7DF9FF"/>
    <Button
        style="@style/btnStyleBlackpearl"
        android:id="@+id/delete_song_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/delete_song"
        android:textColor="#FF6600" />
    </LinearLayout>
    
	<EditText
	    android:id="@+id/chord_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="false"
        android:inputType="textMultiLine"
        android:gravity="top|left"
        android:background="#050e13"
        android:textColor="#FFFFFF"/>
	    
</LinearLayout>
